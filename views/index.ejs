<!DOCTYPE html>
<html lang="es">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  <body style="background-color: lightgray;">
    <div class="d-flex flex-column align-items-center justify-content-center">
      <div class="w-50 pt-5 ps-5 pe-5 pb-4 rounded" style="background-color: white;">
        <h1><%= title %></h1>
        <hr>
        <form id="options-form" method="post" action="" class="row">
          <div class="col">
            <button id="group-chat-btn" class="btn btn-primary">Group Chat</button>
          </div>
          <div class="col">
            <button id="create-room-btn" class="btn btn-primary">Create Room</button>
          </div>
          <div class="col-5">
            <div class="input-group">
              <input id="join-room-text" class="form-control" type="text" name="roomId" placeholder="Room ID">
              <button id="join-room-btn" class="btn btn-primary">Join</button>
            </div>
          </div>
        </form>
        <% if (error) { %>
          <div class="alert alert-danger mt-5" role="alert"><%= error %></div>
        <% } %>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      // Abrimos una conexi贸n al servidor socket IO para obtener la lista de chats abiertos
      const socket = io();

      // Se evita que se propague la acci贸n predeterminada del formulario
      const form = document.getElementById("options-form");
      
      // Asociamos cada bot贸n a la acci贸n correspondiente
      document.getElementById("group-chat-btn").addEventListener("click", function(e) {
        form.setAttribute("action", "group-chat");
      });

      document.getElementById("create-room-btn").addEventListener("click", function(e) {
        form.setAttribute("action", "create-room");
      });

      document.getElementById("join-room-btn").addEventListener("click", function(e) {
        form.setAttribute("action", "join-room");
      });

      // Si se pulsa enter en "join-room-text", se manda a "join"
      document.getElementById("join-room-text").addEventListener("submit", function(e) {
        form.setAttribute("action", "join-room");
        alert("JOIN");
      });
    </script>
  </body>
</html>
